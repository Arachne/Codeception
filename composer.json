{
    "name": "arachne/codeception",
    "description": "Integration of Nette framework to Codeception.",
    "type": "library",
    "keywords": [ "arachne", "codeception", "nette" ],
    "license": "MIT",
    "authors": [
        {
            "name": "Jáchym Toušek",
            "homepage": "http://enumag.cz",
            "email": "enumag@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1.0",
        "codeception/codeception": "^2.3.2",
        "nette/bootstrap": "^3.0.0@alpha",
        "nette/di": "^3.0.0@alpha",
        "nette/http": "^3.0.0@alpha"
    },
    "require-dev": {
        "nette/application": "^3.0.0@alpha",
        "latte/latte": "^3.0.0@alpha",
        "tracy/tracy": "^2.4.0"
    },
    "minimum-stability": "alpha",
    "autoload": {
        "psr-4": {
            "Arachne\\Codeception\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Functional\\": "tests/functional/src"
        },
        "files": [
            "vendor/codeception/codeception/shim.php"
        ]
    },
    "scripts": {
        "tools": "sh composer-tools.sh",
        "ci": [
            "@fix",
            "@analyse",
            "@test"
        ],
        "fix": "\"vendor-tools/bin/php-cs-fixer\" fix",
        "analyse": "\"vendor-tools/bin/phpstan\" analyse --no-progress --level=5 --configuration=phpstan.neon src tests",
        "test": [
            "\"vendor/bin/codecept\" build",
            "\"vendor/bin/codecept\" run --debug"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
