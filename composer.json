{
    "name": "arachne/codeception",
    "description": "Integration of Nette framework to Codeception.",
    "type": "library",
    "keywords": [ "arachne", "codeception", "nette" ],
    "license": "MIT",
    "authors": [
        {
            "name": "Jáchym Toušek",
            "homepage": "http://enumag.cz",
            "email": "enumag@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1.0",
        "codeception/codeception": "^2.2.0",
        "nette/application": "^3.0.0@alpha",
        "nette/bootstrap": "^3.0.0@alpha",
        "nette/component-model": "^3.0.0@alpha",
        "nette/di": "^3.0.0@alpha",
        "nette/http": "^3.0.0@alpha",
        "nette/neon": "^3.0.0@alpha",
        "nette/php-generator": "^3.0.0@alpha",
        "nette/utils": "^3.0.0@alpha"
    },
    "require-dev": {
        "nette/caching": "^3.0.0@alpha",
        "nette/finder": "^3.0.0@alpha",
        "latte/latte": "^3.0.0@alpha",
        "tracy/tracy": "^2.4.0"
    },
    "autoload": {
        "psr-4": {
            "Arachne\\Codeception\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Integration\\": "tests/integration/src"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "scripts": {
        "all": [
            "@fix",
            "@analyse",
            "@test"
        ],
        "fix": "php-cs-fixer fix",
        "analyse": "phpstan analyse --no-progress --level=4 --configuration=phpstan.neon src tests",
        "test": [
            "\"vendor/bin/codecept\" build",
            "\"vendor/bin/codecept\" run"
        ]
    }
}
